{
  "hosting": [
    {
      "target": "ji-cloud-sandbox-storybook",
      "public": "frontend/storybook/dist/storybook-build",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "ji-cloud-sandbox-docs",
      "public": "temp-docs",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "book/**",
          "destination": "/book/index.html"
        },
        {
          "source": "crate/**",
          "destination": "/crate/shared/index.html"
        }
      ]
    },
    {
      "target": "ji-cloud-storybook",
      "public": "frontend/storybook/dist/storybook-build",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "ji-cloud-docs",
      "public": "temp-docs",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "book/**",
          "destination": "/book/index.html"
        },
        {
          "source": "shared/**",
          "destination": "/shared/index.html"
        }
      ]
    }
  ]
}
